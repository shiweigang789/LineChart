<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AbsLeafChart">

        <attr name="lc_topPadding" format="dimension" />
        <attr name="lc_leftPadding" format="dimension" />
        <attr name="lc_bottomPadding" format="dimension" />
        <attr name="lc_rightPadding" format="dimension" />

        <attr name="lc_startMarginX" format="dimension" />

        <attr name="lc_startMarginY" format="dimension" />

        <attr name="lc_coordinateMode">
            <enum name="across" value="1" />
            <enum name="intersect" value="2" />
            <enum name="x_across" value="3" />
            <enum name="y_across" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="OutsideLineChart">
        <attr name="lc_step" format="dimension" />
    </declare-styleable>

    <declare-styleable name="HorizontalProgressBar">
        <attr name="progress_bg_color" format="reference|color" />
        <attr name="progress_color" format="reference|color" />
        <attr name="progress_width" format="reference" />
        <attr name="text_color1" format="reference|color" />
        <attr name="text_color2" format="reference|color" />
        <attr name="text_bg_color1" format="reference|color" />
        <attr name="text_bg_width" format="reference|dimension" />
        <attr name="text_bg_height" format="reference|dimension" />
        <attr name="text_paint_width" format="reference|dimension" />
        <attr name="triangle_height" format="reference|dimension" />
        <attr name="text_bg_color2" format="reference|color" />
        <attr name="text_size" format="reference|dimension" />
        <attr name="text_rect_round_radius" format="reference|dimension" />
        <attr name="progress_anim" format="boolean" />
        <attr name="progress_anim_duration" format="integer" />
    </declare-styleable>

</resources>